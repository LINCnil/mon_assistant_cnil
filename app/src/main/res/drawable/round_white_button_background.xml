<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--default-->
    <item
        android:state_pressed="false">
        <shape>
            <stroke android:width="@dimen/button_border_width" android:color="@color/divider_background" />
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/answer_background" />
        </shape>
    </item>
    <!--focused-->
    <item
        android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/button_border_width" android:color="@color/divider_background" />
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/round_button_pressed_background" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="@dimen/button_border_width" android:color="@color/divider_background" />
            <corners android:radius="@dimen/button_corner_radius" />
            <solid android:color="@color/answer_background" />
        </shape>
    </item>
</selector>